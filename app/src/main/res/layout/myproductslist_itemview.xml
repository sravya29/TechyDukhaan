<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/product_list"
    android:layout_height="match_parent"
    android:background="#BBDEFB"
    android:weightSum="1" >



    <ImageView
        android:id="@+id/myprodimg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="108dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/myprodimg"
        android:layout_toEndOf="@+id/myprodimg"
        android:fontFamily="casual"
        android:hint="PRODUCT NAME"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/myprodname"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editbutton"
        android:layout_alignStart="@+id/editbutton"
        android:fontFamily="casual"
        android:text="Rs."
        android:textSize="25sp" />

    <TextView
        android:id="@+id/myprodprice"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/textView4"
        android:hint="00000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/editbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/myprodimg"
        android:layout_toEndOf="@+id/myprodimg"
        android:layout_marginLeft="4dp"
        android:fontFamily="casual"
        android:background="#2196F3"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:text="Edit" />

    <Button
        android:text="Delete"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:fontFamily="casual"
        android:id="@+id/delbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/myprodimg"
        android:layout_toEndOf="@+id/myprodimg"
        android:layout_marginLeft="97dp"/>

</RelativeLayout>
