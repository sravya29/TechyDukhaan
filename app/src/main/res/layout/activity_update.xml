<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:id="@+id/newproduct_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradientback"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/btnedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editdescript"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:onClick="updateItem"
            android:text="Edit" />

        <EditText
            android:id="@+id/editdescript"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descript"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="400dp"
            android:hint="Edit your product description here.."
            android:lines="4"
            android:background="#B3E5FC"
            android:textColor="#0D47A1"
            android:fontFamily="casual"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editBtnUpload"
            android:layout_marginTop="15dp"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text="Edit Category"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/imghead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editProdName"
            android:layout_marginTop="13dp"
            android:fontFamily="casual"
            android:text="New Image"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/editCat"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="150dp"
            android:background="#B3E5FC"
            android:layout_marginBottom="13dp" />

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="315dp"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text="Edit age of product: "
            android:textSize="20sp"
            android:fontFamily="casual"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/editBtnUpload"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/imghead"
            android:layout_marginLeft="40dp"
            android:layout_toEndOf="@+id/imghead"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="casual"
            android:text="UPLOAD"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editprice"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editpic"
            android:background="#B3E5FC"
            android:hint="0.00"
            android:textColor="#0D47A1"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/editsage"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/age"
            android:layout_toEndOf="@+id/btnedit"
            android:background="#B3E5FC" />

        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="serif-monospace"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text="UPDATE PRODUCT DETAILS"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/editpic"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_alignTop="@+id/editBtnUpload"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/editCat" />

        <EditText
            android:id="@+id/editProdName"
            android:layout_marginTop="80dp"
            android:hint="Edit Name"
            android:layout_width="300dp"
            android:textColor="#0D47A1"
            android:layout_height="50dp"
            android:fontFamily="casual"
            android:background="#B3E5FC"
            android:textAlignment="center" />

    </RelativeLayout>

</ScrollView>